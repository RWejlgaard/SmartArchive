<Controls:MetroWindow x:Class="SmartArchive.Windows.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      Title="Smart Archive"
                      Height="600"
                      Width="800" WindowStartupLocation="CenterScreen" Icon="/SmartArchive;component/Assets/Icons/icon_32x32-plain.png"
                      >

    <!--<Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>

        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>-->

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="FoLeftMenu" Position="Left" Width="200" Margin="0,15,0,0" TitleVisibility="Collapsed"
                             CloseButtonVisibility="Collapsed" >
                <ToggleButton x:Name="FlyOuButton" Click="FlyOutButton_OnClick" Style="{DynamicResource MaterialDesignHamburgerToggleButton}"
                              HorizontalAlignment="Right" VerticalAlignment="Top" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <ToggleButton x:Name="FlyOutButton" Click="FlyOutButton_OnClick" Grid.Column="1" Style="{DynamicResource MaterialDesignHamburgerToggleButton}"
                          VerticalAlignment="Top" HorizontalAlignment="Right" />
    </Grid>

</Controls:MetroWindow>